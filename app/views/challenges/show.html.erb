<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title" id="exampleModalLongTitle">Contract</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        By clicking "accept", you commit to yourself to achieve this challenge in the time alloted !
      </div>
      <div class="bg-blue">
        <div class="btn-box">
          <%= link_to "Accept", challenge_dares_path(@challenge), class: "btn-main", method: :post %>
        </div>
        <div class="btn-box">
          <button type="button" class="btn-white" data-dismiss="modal">Refuse</button>
        </div>
      </div>
    </div>
  </div>
</div>

<h3 class="text-center"><%= @challenge.name %></h3>


<p class="text-justify"> <%= @challenge.content %> </p>
<p class="text-justify"> Tu as fait <%= @count %> fois ce d√©fi.</p>
<div>
  <h4>Attendees :</h4>
</div>

<p class="card-content"> <%= @challenge.content %> </p>
<p> You have done this challenge <strong><%= @count %></strong> times</p>

<!-- Button trigger modal -->
<div class="btn-box">
  <button type="button" class="btn-main" data-toggle="modal" data-target="#exampleModalCenter">
    Go!
  </button>
</div>
<div class="btn-box">
  <%= link_to "Back", request.referer.present? ? request.referer : default_path, class: "btn-blue" %>
</div>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
