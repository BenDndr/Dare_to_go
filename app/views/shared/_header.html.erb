<div class="header">
  <% if user_signed_in? %>
    <p class="header-item"><%= current_user.username %></p>
    <p class="header-item">
      Ranl : <%= Level.where("xp_requirement < ?", current_user.challenges.sum(:xp)).last.id %> - 
      <%= Level.where("xp_requirement < ?", current_user.challenges.sum(:xp)).last.rank %></p>
    <div class="nav-item dropdown">
      <%= avatar_navbar(current_user) %>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <%= link_to "Profile", "#", class: "dropdown-item" %>
        <%= link_to "My journey", "#", class: "dropdown-item" %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
      </div>
  <% else %>
      <%= link_to new_user_session_path, class: "nav-link" do %>
        <strong><p class="header-item">Login</p></strong>
      <% end %>
    <% end %>
  </div>
</div>
